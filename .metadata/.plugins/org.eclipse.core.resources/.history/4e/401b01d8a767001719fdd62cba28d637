
public class UsoArrays {

	public static void main(String[] args) {
		int [] mi_matriz = new int[5];
		// También sería posible: int mi_matriz [] = new int[5];
		int mi_matriz2 [] = new int[5];
		
		mi_matriz[0]=5;
		mi_matriz[1]=38;
		mi_matriz[2]=-15;
		mi_matriz[3]=92;
		mi_matriz[4]=87;
		
		for (int i = 0; i < mi_matriz.length-1; i++) {
			System.out.printf("Valor del índice %s = %s \n", i, mi_matriz[i]);
		}
		

	}

}
